<%= form_with(model: school, local: true) do |form| %>
  <fieldset class="form-group">
    <% if school.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(school.errors.count, "error") %> prohibited this school from being saved:</h2>

        <ul>
          <% school.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <div class="offset-2 col-3">
        <label for="name">Tên trường</label>
      </div>
      <div class="col-5">
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-2 col-3">
        <label for="description">Mô Tả</label>
      </div>
      <div class="col-5">
        <%= form.text_area :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-2 col-3">
        <label for="contact">Liên Lạc</label>
      </div>
      <div class="col-5">
        <%= form.text_area :contact, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-2 col-3">
        <label for="address">Địa chỉ</label>
      </div>
      <div class="col-5">
        <%= form.text_area :address, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-2 col-3">
        <label for="admin_note">Ghi chú</label>
      </div>
      <div class="col-5">
        <%= form.text_area :admin_note, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
        <div class="offset-2 col-3">
          <label for="role">Trạng thái</label>
        </div>
        <div class="col-5">
          <%= form.select(:status, readable_school_statuses, {}, { :class => "custom-select" }) %>
        </div>
      </div>
  </fieldset>

  <div class="actions form-group-btns row">
    <div class="offset-2 col-4">
      <%= form.submit 'Lưu', class: 'btn-primary btn-block p-2 rounded-sm' %>
    </div>
  </div>
<% end %>
